            // Header End
            .container-fluid
                form#searchForm(action='javascript:void(0)', onsubmit='return false;')
                    .input-group.m-lg-auto
                        input#searchInput.form-control(type='text', name='query', placeholder='Enter your search query...' oninput='searchVoucher()')
                        button#searchButton.btn.btn-outline-secondary(type='button') Search
                .row
                    .col-md-6
                        .card.rounded-3.p-3.ps-5
                            h3 Voucher được sử dụng nhiều nhất
                            .card-body.p-2
                                h6.fw-semibold.fs-4 Name: #{mostVoucher.name}
                                h6.fw-semibold Date: #{mostVoucher.fromDate}  to  #{mostVoucher.toDate}
                                h6.fw-semibold Số lần sử dụng: #{mostCount}
                    .col-md-6
                        .card.rounded-3.p-3.ps-5
                            h3 Voucher được sử dụng ít nhất
                            .card-body.p-2
                                h6.fw-semibold.fs-4 Name: #{lessVoucher.name}
                                h6.fw-semibold Date: #{lessVoucher.fromDate}  to  #{lessVoucher.toDate}
                                h6.fw-semibold Số lần sử dụng: #{lessCount}
