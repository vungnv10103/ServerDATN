                                    label.form-label(for='title') Name
                                    input#titleUp.form-control(name='name',placeholder='Nhập Name Mã giảm giá', type='text', aria-describedby='textHelp', required)
                                .mb-3
                                    label.form-label(for='content') Content
                                    input#contentUp.form-control(name='content',type='textarea', placeholder='Nhập Content Mã giảm giá', aria-describedby='textHelp', required)
                                .mb-3
                                    label.form-label(for='content') Price
                                    input#priceUp.form-control(name='price',type='number', placeholder='Nhập Giá trị Mã giảm giá', aria-describedby='textHelp',required)
                                .form-group
