                        .modal-body
                            form(action="/stech.manager/createVoucher" method="post")
                                .mb-3
                                    label.form-label(for='title') Name
                                    input#title.form-control(name='name',placeholder='Nhập Name Mã giảm giá', type='text', aria-describedby='textHelp', required)
                                .mb-3
                                    label.form-label(for='content') Content
