                                    input#fromDateUp(name='fromDate',type="datetime-local", class="form-control", placeholder="", aria-describedby="helpId")
                                .form-group
                                    label.form-label(for="toDate") To Date
                                    input#toDateUp(name='toDate',type="datetime-local", class="form-control", placeholder="", aria-describedby="helpId")
                                button.mt-3.btn.btn-dark(type='button', data-bs-dismiss='modal') Hủy
                                button.mt-3.ms-2.btn.btn-outline-dark-light(type='submit') Save

    script(src='/js/voucher.js')
    script.
        function searchVoucher() {
            const query = removeDiacritics(document.getElementById('searchInput').value.toLowerCase());
            const voucherRows = document.querySelectorAll('tbody tr');

            voucherRows.forEach(function (row) {
                const voucherName = removeDiacritics(row.querySelector('[data-info="name"]').innerText.toLowerCase());
                const voucherPrice = removeDiacritics(row.querySelector('[data-info="price"]').innerText.toLowerCase());

                // Check if either the name or price contains the query
                const isMatch = voucherName.includes(query) || voucherPrice.includes(query);

                // Display or hide the row based on the search result
                row.style.display = isMatch ? '' : 'none';
            });
        }

        function removeDiacritics(str) {
            return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
        }